{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "outDir": "JSFiles",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "jasmine"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}